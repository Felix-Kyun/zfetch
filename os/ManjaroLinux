#! /usr/bin/env bash

OS_COLOR=$(tput setaf 2)$(tput bold)
COLOR_RESET=$(tput setaf 7)$(tput sgr0)

flag() {
    _flag=(
        ""
        "██████████████████  ████████"
        "██████████████████  ████████"
        "██████████████████  ████████"
        "██████████████████  ████████"
        "████████            ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████"
        "████████  ████████  ████████" 
        "████████  ████████  ████████" 
    )
    echo -ne "${OS_COLOR}${_flag[$1]}${COLOR_RESET} \t"
} 